<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentHomeFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmentHomeConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragmentHomeTaskButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/label_task"
            android:textSize="30sp"
            app:icon="@drawable/ic_format_list_bulleted_black_24dp"
            app:iconGravity="textStart"
            app:iconSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragmentHomeReminderButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/label_reminder"
            android:textSize="30sp"
            app:icon="@drawable/ic_date_range_black_24dp"
            app:iconGravity="textStart"
            app:iconSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentHomeTaskButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>